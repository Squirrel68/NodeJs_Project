<%- include("./layout/head", {title: "Category" }) %> <%- include("./layout/header") %> <%- include("./layout/menu") %>
      <%- include("./layout/slider") %>

        <!--	List Product	-->
        <div class="products">
          <h3>
            <%=title%> (hiện có <%=total%> sản phẩm)
          </h3>
          <div class="product-list card-deck">
            <%for(product of products) { %>
              <div class="product-item card text-center">
                <a href="/product-<%=product.slug%>.<%=product.id%>"><img src="../images/<%=product.thumbnail%>" /></a>
                <h4><a href="/product-<%=product.slug%>.<%=product.id%>">
                    <%=product.name%>
                  </a></h4>
                <p>Giá Bán: <span>
                    <%=product.price%>đ
                  </span></p>
              </div>
              <%}%>
          </div>
        </div>
        <!--	End List Product	-->

        <%- include("./layout/sidebar")%> <%- include("./layout/footer")%>